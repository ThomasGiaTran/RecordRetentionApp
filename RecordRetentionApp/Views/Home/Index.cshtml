@using (Html.BeginForm())
{
    @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@

    <br />

    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-12">
                    <h3 class="panel-title">Record List</h3>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-striped" id="mainTable">
                <thead>
                    <tr>
                        <th>File Number</th>
                        <th>Record Description</th>
                        <th>Retention Description</th>
                        <th>Retention Period (Month)</th>
                        <th>Office of Record</th>
                        <th>Folder Name</th>
                        @if (User.IsInRole("ADMIN") | User.IsInRole("RecordRetentionApp(RW)"))
                        {
                            <th>Edit</th>
                        }
                        @if (User.IsInRole("ADMIN") | User.IsInRole("RecordRetentionApp(RW)"))
                        {
                            <th>Delete</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.retention_schedule_List)
                {
                        <tr>
                            <th>@item.File_Number</th>
                            <td>@item.Record_Description </td>
                            <td>@item.Retention_Description </td>
                            <td>@item.retention_period_Month</td>
                            <td>@item.Office_Of_Record</td>
                            <td>@item.Folder_Name</td>
                            @if (User.IsInRole("ADMIN") | User.IsInRole("RecordRetentionApp(RW)"))
                            {
                                <td>
                                    <a href="#" class="btn btn-primary btn-sm editClass">
                                        <i class="glyphicon glyphicon-edit"></i>
                                    </a>
                                    <div style="display:none">
                                        @item.RecordID
                                    </div>
                                </td>
                            }

                            @if (User.IsInRole("ADMIN") | User.IsInRole("RecordRetentionApp(RW)"))
                            {
                                <td>

                                    <button type="submit" name="RecordID" value=@item.RecordID class="btn btn-danger btn-sm"
                                            formaction=@Url.Action("DeleteRecord") formmethod="post" onclick="return confirm('Are sure you want to delete this Record?');">
                                        <span class="glyphicon glyphicon-remove"> </span>
                                        @*Delete*@
                                    </button>

                                    @*<a href="#" class="btn btn-danger btn-sm">
                                            <span class="glyphicon glyphicon-trash"></span> Delete
                                        </a>*@
                                </td>
                            }


                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-md-12">
                        <h3 class="panel-title">Add New Record</h3>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger alert-dismissable" role="alert">
                                <button type="button" class="close" data-dismiss="alert">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                @Html.ValidationSummary(false)
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        @if (ViewBag.SuccessMessage != null)
                        {
                            <div class="alert alert-success alert-dismissable" role="alert">
                                <button type="button" class="close" data-dismiss="alert">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                @ViewBag.SuccessMessage
                            </div>
                        }
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(m => m.ri.Office_Of_Record )
                        @*@Html.TextBoxFor(m => m.ri.department, new { @class = "form-control" })*@
                        @*@Html.ValidationMessageFor(m => m.ri.department, "", new { @class = "text-danger" })*@
                        @*@Html.DropDownList("Office_Of_Record", (IEnumerable<SelectListItem>)Model.Office_Of_Record, "Select ...", new { @class = "form-control" })*@
                        @Html.DropDownListFor(m => m.ri.Office_Of_Record,
                                                    new SelectList(Model.Office_Of_Records, "Office_Of_Record_Name", "Office_Of_Record_Name"),
                                                     new { @class = "form-control" })
                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(m => m.ri.File_Number)
                        @Html.TextBoxFor(m => m.ri.File_Number, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(m => m.ri.File_Number, "", new { @class = "text-danger" })*@
                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(m => m.ri.retention_period_Month)
                        @Html.TextBoxFor(m => m.ri.retention_period_Month, new { @class = "form-control" })
                    </div>

                    <div class="col-md-3">
                        @Html.LabelFor(m => m.ri.Folder_Name )
                        @Html.TextBoxFor(m => m.ri.Folder_Name, new { @class = "form-control" })
                        @*@Html.ValidationMessageFor(m => m.ri.Folder_Name, "", new { @class = "text-danger" })*@
                        @*@Html.DropDownListFor(m => m.ri.Folder_Name,
                                                    new SelectList(Model.folderNameDropdown, "Folder_Name", "Folder_Name"),
                                                     new { @class = "form-control" })*@
                    </div>
                </div>

                <br />

                <div class="row">                    
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.ri.Retention_Description )
                        @Html.TextBoxFor(m => m.ri.Retention_Description, new { @class = "form-control" })
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(m => m.ri.Record_Description )
                        @Html.TextAreaFor(m => m.ri.Record_Description, new { @class = "form-control" })
                    </div>
                </div>

                <div class="row" style="margin-top:20px;">

                    <div class="col-md-4 text-center">
                        @*<button class="btn btn-primary btn-block">Add New Record </button>*@
                        <input type="submit" value="Add New Record" class="btn btn-primary btn-block" />
                    </div>
                </div>
            </div>
        </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>

@section scripts
{
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css" />
    <script type="text/javascript" src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#mainTable').DataTable();

            //edit
            $(".editClass").on("click", function () {
                var v1 = $(this).closest('tr').find('td:nth-child(7)').text().trim();

                $.ajax({
                    cache: false,
                    type: 'GET',
                    url: '@Url.Action("EditRecord", "Home")',
                    data: { RecordID: v1 }
                }).done(function (d) {
                    $("#editModalDiv").html(d)
                    $("#editModal").modal("show");
                });
            });
        });
    </script>

}

